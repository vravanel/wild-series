{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    {% if comments is not empty %}
        <ul>
            {% for comment in comments %}
                <li>Commentaire : {{ comment.comment }}</li>
                <li>Rate : {{ comment.rate }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun commentaire trouv√©.</p>
    {% endif %}
    {% if app.user %}
        {{ include('comment/_form.html.twig') }}
    {% endif %}
    <a href="{{ path('app_episode_index') }}">back to list</a>

    <a href="{{ path('app_episode_edit', {'id': episode.id}) }}">edit</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
