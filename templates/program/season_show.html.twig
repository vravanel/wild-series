{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <h1>{{ program.title }}</h1>
    <h2>Saison {{ season.number }}</h2>
    <p>Description : {{ season.description }}</p>

    <h3>Liste des épisodes :</h3>
       <ul>
		{% for episode in season.episodes %}
			<li>
					<a href="{{ path('program_episode_show', { 'program_slug' : program.slug, 'season_id' : season.id, 'episode_slug' : episode.slug }) }}">épisode : {{ episode.title }}</a>
			</li>
			{% endfor %}
	</ul>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}